				posY = posY + stepY		
				yCount = yCount + 1
			end		
			
			posY = math.floor(between/2)
			yCount = 0
			xCount = xCount + 1
			posX = posX + stepX		
		end		
	elseif typeArrange == 1 then
			local posX = math.floor(between/2)
			local posY = 0 --math.floor(between/2)
		
