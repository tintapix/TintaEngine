	main.lassert( typeArrange >= 0 and typeArrange < 2 , " Wrong typeArrange value!" )
	local exImage 	 = s_getex(imgPathIn)		
	local exImageOut = s_getex(pathOut)	
	
	picImg = image.read( imgPathIn, exImage, imageType )	

	

	local stepX = between
	local stepY = between
	
